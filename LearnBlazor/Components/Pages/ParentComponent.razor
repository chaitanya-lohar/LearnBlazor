@page "/parent"

<CascadingValue Value="@MessageForGrandChild" Name="message">
    <CascadingValue Value="@LuckyNumber" Name="luckyNumber">
        <_ChildComponent @ref="childObj" OnButtonClick="showMessage" Title="This is parameter from parent component in child component">
            <ChildSomeContent>some text between the component from parent component</ChildSomeContent>
        </_ChildComponent>
        <p>@messageText</p>
    </CascadingValue>
</CascadingValue>
