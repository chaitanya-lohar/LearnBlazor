<div class="row">
    <button class="btn btn-success col-md-3 m-1" @onclick="()=>childObj.ToastrSuccess()">Toastr Success</button>
    <button class="btn btn-danger col-md-3 m-1" @onclick="()=>childObj.SweetAlertSuccess()">Sweet Alert Success</button>
</div>


@code {
    private _ChildComponent childObj = new ();

    public string messageText { get; set; } = string.Empty;
    public string MessageForGrandChild { get; set; } = "This is for grand child";
    public string LuckyNumber { get; set; } = "13";

    public void showMessage()
    {
        messageText = "button in child component was clicked";
    }
}

